doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css')
  link(rel='stylesheet' href='https://pro.fontawesome.com/releases/v5.10.0/css/all.css')
  title Test
body
  .container
    nav.navbar.navbar-expand-lg.navbar-light.bg-light.d-flex.justify-content-between
      a.navbar-brand(href='#') 
        i.fas.fa-hotel(style="color: gray;")
        span(style="margin-left: 10px;") My Home
      a(href='/logout') Logout
    h4.mt-5 Login History
    table.table.table-light.table-striped
      thead.thead-dark
        tr
          th Name
          th Status
          th Date
      tbody
      each p in people
        tr
          td #{p['name']}
          td #{p['status']}
          td #{p['date']}
  script(src='https://code.jquery.com/jquery-3.5.1.slim.min.js')
  script(src='https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js')
  script(src='https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.min.js')
  

